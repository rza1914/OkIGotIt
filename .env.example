# iShop E-commerce Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./ishop.db
DATABASE_ECHO=false

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Application Settings
DEBUG=true
ENVIRONMENT=development
API_V1_STR=/api/v1

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
EMAIL_FROM=noreply@ishop.ir

# Payment Gateway Settings (Iranian)
# ZarinPal
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=true

# PayPing
PAYPING_TOKEN=your-payping-token

# IDPay
IDPAY_API_KEY=your-idpay-api-key
IDPAY_SANDBOX=true

# SMS Provider (Iranian)
# Kavenegar
KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_SENDER=your-sender-number

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Configuration (Alternative to SQLite)
# DATABASE_URL=postgresql://username:password@localhost/ishop_db

# Production Settings (Set these for production deployment)
# DEBUG=false
# ENVIRONMENT=production
# SECRET_KEY=your-production-secret-key
# ALLOWED_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgresql://user:password@localhost/production_db

# OAuth Settings (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ishop.log

# Cache Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Admin Settings
ADMIN_EMAIL=admin@ishop.ir
ADMIN_PASSWORD=change-this-password

# Persian/Jalali Date Settings
USE_PERSIAN_CALENDAR=true
TIMEZONE=Asia/Tehran

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Backup Settings
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30